extends layout/main

block content
  .user-profile
    .user-profile__header
      img.avatar(src=user.avatarUrl)
      h4.profile__username=user.name
    if user.id === loggedUser.id
      .user-profile__btns
        a(href=`${route.user}${route.editProfile}`)
          button Edit Profile
        a(href=`${route.user}${route.changePassword}`)
          button Change Password