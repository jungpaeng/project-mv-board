extends layout/main

block content
  .form-container
    form(action=`${route.video}${route.editVideo}`, method="post")
      input(type="text", name="title", placeholder="Title")
      textarea(name="description", placeholder="Description")
      input(type="submit", value="Update Video")
    a.form-container__link.form-container__link--delete(
      href=`${route.video}${route.deleteVideo}`
    ) Delete Video